<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".ReservationTimeActivity">

    <TextView
        android:id="@+id/filmTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5e5e5e"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Film Title" />

    <LinearLayout
        android:id="@+id/dateSelectionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/filmTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dátum"
            android:textSize="16sp"
            android:textColor="#383838"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/selectDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Válassz dátumot"
            android:backgroundTint="#383838"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/selectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#383838"
            tools:text="2023-10-27"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/showtimeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/dateSelectionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/showtimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vetítési idő"
            android:textSize="16sp"
            android:textColor="#383838"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/showtimeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/item_border_small_style"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberOfSeatsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/showtimeContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/numberOfSeatsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helyek száma"
            android:textSize="16sp"
            android:textColor="#383838"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/numberOfSeatsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/item_border_small_style"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reservationNameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/numberOfSeatsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/reservationNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foglaló neve"
            android:textSize="16sp"
            android:textColor="#383838"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/reservationNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Név"
            android:inputType="textPersonName|textCapWords"
            android:background="@drawable/item_border_small_style"
            android:gravity="center"
            android:textColor="#383838"
            android:textColorHint="#383838"
            android:minWidth="150dp"/>
    </LinearLayout>


    <GridLayout
        android:id="@+id/seatGridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:alignmentMode="alignBounds"
        android:columnCount="15"
        android:padding="4dp"
        android:rowCount="15"
        android:rowOrderPreserved="false"
        app:layout_constraintBottom_toTopOf="@+id/reserveSeatsButton"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservationNameContainer"
        app:layout_constraintVertical_bias="0.0">

    </GridLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#383838"
        android:text="Vissza"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reserveSeatsButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reserveSeatsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#383838"
        android:text="Foglalás"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/backButton" />

</androidx.constraintlayout.widget.ConstraintLayout>